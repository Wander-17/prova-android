                android:layout_height="91dp"
                android:onClick="azione"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="88dp"
                android:layout_height="91dp"
                android:onClick="azione"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="88dp"
                android:layout_height="91dp"
                android:onClick="azione"
                android:text="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn0"
                android:layout_width="88dp"
                android:layout_height="91dp"
                android:onClick="azione"
                android:text="0" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>