        tools:layout_editor_absoluteY="195dp" />

    <Button
        android:id="@+id/btnCancella"
        android:layout_width="45dp"
        android:layout_height="44dp"
        android:text="C"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="195dp" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="45dp"
        android:layout_height="44dp"
