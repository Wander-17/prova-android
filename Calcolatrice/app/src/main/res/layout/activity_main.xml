        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btn4"
                android:layout_width="88dp"
                android:layout_height="91dp"
                android:onClick="azione"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="88dp"
                android:layout_height="91dp"
                android:onClick="azione"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
